# Install Script

build-install:
	COPY_DIR		./ %IMAGE_TREE/lib/modules/generic/misc/
	FORCE_ADD_MODULE helper
	ADD_MODULES helper
	EXECUTE if [ "%CONFIG_SPX_FEATURE_DISABLE_MTD_SUPPORT" == "YES" ]; then echo "CONFIG_SPX_FEATURE_DISABLE_MTD_SUPPORT" >> %IMAGE_TREE/etc/core_features; fi
	EXECUTE if [ "%CONFIG_SPX_FEATURE_DISABLE_MTD_SUPPORT" == "YES" ]; then echo "CONFIG_SPX_FEATURE_GLOBAL_BUILD_MAJOR"="%CONFIG_SPX_FEATURE_GLOBAL_BUILD_MAJOR" >>  %IMAGE_TREE/etc/core_macros; fi
	EXECUTE if [ "%CONFIG_SPX_FEATURE_DISABLE_MTD_SUPPORT" == "YES" ]; then echo "CONFIG_SPX_FEATURE_GLOBAL_BUILD_MINOR"="%CONFIG_SPX_FEATURE_GLOBAL_BUILD_MINOR" >>  %IMAGE_TREE/etc/core_macros; fi
	EXECUTE if [ "%CONFIG_SPX_FEATURE_DISABLE_MTD_SUPPORT" == "YES" ]; then echo "CONFIG_SPX_FEATURE_GLOBAL_BUILD_NUMBER"="%CONFIG_SPX_FEATURE_GLOBAL_BUILD_NUMBER" >>  %IMAGE_TREE/etc/core_macros; fi
	EXECUTE if [ "%CONFIG_SPX_FEATURE_DISABLE_MTD_SUPPORT" == "YES" ]; then echo "CONFIG_SPX_FEATURE_GLOBAL_BUILD_DATE"="%CONFIG_SPX_FEATURE_GLOBAL_BUILD_DATE" >>  %IMAGE_TREE/etc/core_macros; fi
	EXECUTE if [ "%CONFIG_SPX_FEATURE_DISABLE_MTD_SUPPORT" == "YES" ]; then echo "CONFIG_SPX_FEATURE_GLOBAL_BUILD_TIME"="%CONFIG_SPX_FEATURE_GLOBAL_BUILD_TIME" >>  %IMAGE_TREE/etc/core_macros; fi	
	EXECUTE if [ "%CONFIG_SPX_FEATURE_DISABLE_MTD_SUPPORT" == "YES" ]; then echo "CONFIG_SPX_FEATURE_GLOBAL_BUILD_DESC"="%CONFIG_SPX_FEATURE_GLOBAL_BUILD_DESC" >>  %IMAGE_TREE/etc/core_macros; fi
	EXECUTE if [ "%CONFIG_SPX_FEATURE_DISABLE_MTD_SUPPORT" == "YES" ]; then echo "CONFIG_SPX_FEATURE_GLOBAL_PRODUCT_ID"="%CONFIG_SPX_FEATURE_GLOBAL_PRODUCT_ID" >>  %IMAGE_TREE/etc/core_macros; fi	
debug-install:
